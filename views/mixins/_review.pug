mixin review(review)
  .review__header
    .review__author
      - const author = review.author
      img.avatar(src=author.gravatar, alt=`${author.name} image`)
      p #{author.name}
    .review__stars(title=`Rated ${review.rating} out of 5 stars`)
      = `★`.repeat(review.rating)
      = `☆`.repeat(5 - review.rating)
    //- Use moment added into helper to display a nice message for when review was created
    time.review__time(datetime=review.created)= h.moment(review.created).fromNow()
  .review__body
    p #{review.text}
